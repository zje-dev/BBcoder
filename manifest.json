{
	"name": "BBcoder",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": ["tabs", "<all_urls>"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "BBC"
	},
	"content_scripts": [{
		"css": ["css/index.css"],
		"js": ["js/index.js"],
		"matches": ["http://www.google.com/*"]
	}],
	"web_accessible_resources": [
		"css/index.css"
	]
}
